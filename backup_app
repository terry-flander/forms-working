#!/bin/bash
# clone the app forms and submissiong

env=${1:-"local"}x
echo $env
. config/env/$env.env


echo "\nPull all Forms and Submissions from Source system"
echo "** and save as backup/backup_<YYYYmmdd_HHMM> **\n"
read -p "Do you want to proceed? (yes/no) " yn

case $yn in 
	yes ) echo ok, we will proceed;;
	no ) echo exiting...;
		exit;;
	* ) echo invalid response;
		exit 1;;
esac
python3 ./app/lib/backup_data.py
